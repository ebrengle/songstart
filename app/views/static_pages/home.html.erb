<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="project_form">
        <%= render 'shared/project_form' %>
      </section>
    </aside>
    <div class="col-md-8">
        <h3>Songstart Projects</h3>
        <%= render 'shared/feed' %>
      </div>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1 class="callout">Welcome to Songstart</h1>

    <h2>
      Where you can discover new music.
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-success" %>
  </div>
<% end %>